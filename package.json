{
	"name": "@spread-solvers/ts-template",
	"version": "0.0.2",
	"description": "TypeScript project template",
	"author": "Spread Solvers Collective",
	"license": "MIT",
	"scripts": {
		"prepare": "husky",
		"check-types": "tsc --noEmit",
		"lint": "eslint .",
		"lint:fix": "yarn lint --fix",
		"test": "echo 'No test framework implemented'",
		"format": "prettier . --write",
		"format:check": "prettier . --check",
		"build": "tsc",
		"prepublishOnly": "npm run build"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-organize-imports"
		],
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"trailingComma": "all",
		"printWidth": 120,
		"semi": false
	},
	"lint-staged": {
		"*.{js,ts}": "yarn lint:fix",
		"*.{js,ts,json}": "yarn format"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/js": "^9.37.0",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^24.6.2",
		"commitlint": "^20.1.0",
		"eslint": "^9.37.0",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^15.5.2",
		"prettier": "3.5.3",
		"prettier-plugin-organize-imports": "4.1.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.45.0"
	},
	"dependencies": {
		"@spread-solvers/evm-toolchain": "^0.0.21",
		"asciichart": "^1.5.25",
		"cli-table3": "^0.6.5",
		"dotenv": "^17.2.3"
	}
}
